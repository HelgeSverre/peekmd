{
  "name": "peekmd",
  "private": true,
  "type": "module",
  "module": "index.ts",
  "bin": "./peekmd",
  "scripts": {
    "build": "bun build ./index.ts --compile --outfile peekmd",
    "dev": "bun run ./index.ts README.md",
    "format": "bunx prettier --write .",
    "install": "bun run build && bun link",
    "sort": "bunx sort-package-json"
  },
  "dependencies": {
    "highlight.js": "^11.11.1",
    "marked": "^17.0.1"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
